<Window x:Name="MyNewWindow" x:Class="UB.AddType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UB"
        mc:Ignorable="d"
        Title="AddType" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="Textik" FontSize="40"/>
        <Button x:Name="AddTyp" Grid.Row="1" Content="Добавить новый тип записи" FontSize="40" Click="Button_Click"/>
    </Grid>
</Window>
